---
interface Props {
	title: string;
  image: string;
  url: string
}

const {title, image, url} = Astro.props;
---

<a href={url}>
  <div class="shadow-xl w-64 md:w-80 rounded-2xl">
    <img src={image} class="size-64 md:size-80 rounded-t-2xl">
    <div class="p-5 text-center">
      <h2 class="text-2xl">{title}</h2>
    </div>
  </div>
</a>